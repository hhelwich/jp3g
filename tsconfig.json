{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "lib": ["WebWorker", "DOM", "ES2019.Array"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/demo", "**/dist"]
}
