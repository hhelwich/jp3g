{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "lib": ["WebWorker", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**/*.ts", "demo/**/*.js"]
}
